<body>
    <nav class="navbar navbar-expand-lg navbar-dark bg-dark">
        <a class="navbar-brand" href="#"><i class="fa fa-home" aria-hidden="true"></i> Perfect Properties</a>
        <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNavAltMarkup"
            aria-controls="navbarNavAltMarkup" aria-expanded="false" aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"></span>
        </button>
        <div class="collapse navbar-collapse" id="navbarNavAltMarkup">
            <div class="navbar-nav">
                <a class="nav-item nav-link " href="/">Home <span class="sr-only">(current)</span></a>
                <a class="nav-item nav-link " href="/project">Prnoject</a>
                <a class="nav-item nav-link " href="/enquire">Enquire</a>
                <a class="nav-item nav-link"  href="/admin">Admi</a>

            </div>
        </div>
    </nav>


    <h1 class="text-center mt-4 mb-2">This is Admin area!</h1>
    <h2 class="text-center mt-2 mb-3">Admin can edit or delete product as per need!</h2>
    <div class="row flat ml-1 container-fluid  justify-content-center">
        <% properties.forEach(function(property) { %>
        <div class="card col-md-4">
            <h5 class="badge badge-dark mt-3">Status: <%= property.status %> </h5>
            <img src="./uploads/<%= property.image %>" alt="property-img" style="width: 100%; height: 300px;">
            <div class="card-body">

                <h4 class="card-title mt-3">Location: <%= property.location %> </h4>
                <h4 class="card-title"><%=property.roomtype %></h4>
                <p class="card-text"><span style="font-weight: bold; font-size: 20px;">Address:
                    </span><%=property.address %></p>
                <h3 class="card-text">Price: â‚¹ <%=property.price %></h3>

                <form method="POST" class="text-center" action="/delete">
                    <button type="submit" name="del_id" value=<%= property._id%>
                        class="btn btn-outline-dark waves-effect">Delete</button>
                </form>

            </div>
        </div>
        <% }); %>
    </div>
    </div>
</body>

