<body>

    <nav class="navbar navbar-expand-lg navbar-dark bg-dark">
        <a class="navbar-brand" href="#"><i class="fa fa-home" aria-hidden="true"></i> Perfect Properties</a>
        <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNavAltMarkup"
            aria-controls="navbarNavAltMarkup" aria-expanded="false" aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"></span>
        </button>
        <div class="collapse navbar-collapse" id="navbarNavAltMarkup">
            <div class="navbar-nav">
                <a class="nav-item nav-link " href="/">Home <span class="sr-only">(current)</span></a>
                <a class="nav-item nav-link " href="/project">Project</a>
                <a class="nav-item nav-link " href="/enquire">Enquire</a>

            </div>
        </div>
    </nav>

    <h1 class="text-center mt-2">Here goes down the list!</h1>
    <h3 class="text-center mt-2">Search for your requirement</h3>

    <div class="row flat ml-1 container-fluid  justify-content-center">
        <% properties.forEach(function(property) { %>
        <div class="card col-md-4">
            <h5 class="badge badge-dark mt-3">Status: <%= property.status %> </h5>
            <img src="<%= property.image[0].url %>" alt="property-img" style="width: 100%; height: 300px;">
            <div class="card-body">
                
                <h4 class="card-title mt-3">Location: <%= property.location %> </h4>
                <h4 class="card-title"><%= property.roomtype %></h4>
                <p class="card-text"><span style="font-weight: bold; font-size: 20px;">Address: </span><%=property.address %></p>
                <h2 class="card-title text-center">Price: â‚¹ <%=property.price %></h2>
                
            <div class="row text-center mt-3 mb-3">        
                <form method="POST" class="col-md-6" action="/single">
                    <button type="submit" name="id" value=<%=property._id  %>  class="btn btn-outline-dark waves-effect">More Info</button>
                </form>
                <form method="GET" class="col-md-6" action="/enquire">
                    <button type="submit" name="id" class="btn btn-outline-info waves-effect">Enquire</button>
                </form>
            </div>
            </div>
        </div>
        <% }); %>
    </div>

</body>

</html>

